@model Vision.Models.Page

@{
    ViewData["Title"] = "新建词条";
    ViewData["Side"] = false;
}

<h1>新建条目</h1>

<div class="row" style="margin-top:40px">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="display:none"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" id="title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Namespace" class="control-label"></label>
                <select asp-for="Namespace">
                    <option></option>
                    <option>系统</option>
                    <option>特殊</option>
                    <option>不可见</option>
                </select>
                <span asp-validation-for="Namespace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="    创建词条    " class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">回到首页</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
