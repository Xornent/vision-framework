            if (document.documentElement.scrollTop < 90) dHeight = (document.documentElement.scrollTop / 3);
            else dHeight = 30;
            gnv.style.height = (80 - dHeight) + "px";
            search.style.marginTop = (((80 - dHeight) - 30) / 2) + "px";
        }
        shrink();

        $(function () {
